
@{
    ViewBag.Title = "Verification";
}

<html>
    <head>
        <meta charset="utf-8" />
        <title>Verification</title>
    </head>
    <body>
        <h2>Verification</h2>
        <div class="form">
            @using (Html.BeginForm("Verification", "Home", FormMethod.Post))
            {
                <h3>Please, enter one-time confirmation password</h3><br/>
                <input type="hidden" name="type" value=@ViewBag.Type>
                <input type="text" name="password" class="textBox"/><br/>
                <button name="buttVal" value="submit" class="button buttonSmall">Submit</button>
                <button name="buttVal" value="exit" class="button buttonSmall">Exit</button>
            }
        </div>
    </body>
</html>

